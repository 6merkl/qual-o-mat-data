{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Comment list",
  "description": "All party comments",
  "type": "array",
  "items": {
    "description": "Comment",
    "type": "object",
    "properties": {
      "id": {
        "description": "Unique identifier",
        "type": "integer",
        "minimum": 0
      },
      "text": {
        "description": "Comment text",
        "type": "string"
      }
    },
    "required": ["id", "text"]
  },
  "uniqueItems": true
}

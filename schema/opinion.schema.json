{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Opinion list",
  "description": "All party opinions",
  "type": "array",
  "items": {
    "description": "Opinion",
    "type": "object",
    "properties": {
      "id": {
        "description": "Unique identifier",
        "type": "integer",
        "minimum": 0
      },
      "party": {
        "description": "ID representing the party",
        "type": "integer",
        "minimum": 0
      },
      "statement": {
        "description": "ID representing the statement",
        "type": "integer",
        "minimum": 0
      },
      "answer": {
        "description": "ID representing the party answer",
        "type": "integer",
        "minimum": 0
      },
      "comment": {
        "description": "ID representing the party comment",
        "type": [ "integer", "null" ],
        "minimum": 0
      }
    },
    "required": ["id", "party", "statement", "answer", "comment"]
  },
  "uniqueItems": true
}
